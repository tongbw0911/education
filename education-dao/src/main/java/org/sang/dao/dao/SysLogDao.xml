<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sang.dao.dao.SysLogDao">

    <resultMap type="org.sang.beans.entity.SysLog" id="SysLogMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="gmtCreate" column="gmt_create" jdbcType="TIMESTAMP"/>
        <result property="userNo" column="user_no" jdbcType="BIGINT"/>
        <result property="realName" column="real_name" jdbcType="VARCHAR"/>
        <result property="ip" column="ip" jdbcType="VARCHAR"/>
        <result property="operation" column="operation" jdbcType="VARCHAR"/>
        <result property="method" column="method" jdbcType="VARCHAR"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysLogMap">
        select
          id, gmt_create, user_no, real_name, ip, operation, method, path, content
        from springboot1.sys_log
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysLogMap">
        select
          id, gmt_create, user_no, real_name, ip, operation, method, path, content
        from springboot1.sys_log
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysLogMap">
        select
          id, gmt_create, user_no, real_name, ip, operation, method, path, content
        from springboot1.sys_log
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="gmtCreate != null">
                and gmt_create = #{gmtCreate}
            </if>
            <if test="userNo != null">
                and user_no = #{userNo}
            </if>
            <if test="realName != null and realName != ''">
                and real_name = #{realName}
            </if>
            <if test="ip != null and ip != ''">
                and ip = #{ip}
            </if>
            <if test="operation != null and operation != ''">
                and operation = #{operation}
            </if>
            <if test="method != null and method != ''">
                and method = #{method}
            </if>
            <if test="path != null and path != ''">
                and path = #{path}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into springboot1.sys_log(gmt_create, user_no, real_name, ip, operation, method, path, content)
        values (#{gmtCreate}, #{userNo}, #{realName}, #{ip}, #{operation}, #{method}, #{path}, #{content})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update springboot1.sys_log
        <set>
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="userNo != null">
                user_no = #{userNo},
            </if>
            <if test="realName != null and realName != ''">
                real_name = #{realName},
            </if>
            <if test="ip != null and ip != ''">
                ip = #{ip},
            </if>
            <if test="operation != null and operation != ''">
                operation = #{operation},
            </if>
            <if test="method != null and method != ''">
                method = #{method},
            </if>
            <if test="path != null and path != ''">
                path = #{path},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from springboot1.sys_log where id = #{id}
    </delete>

</mapper>